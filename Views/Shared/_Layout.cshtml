<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @*<style>
        ul {
            list-style-type: none;
            margin: 0px;
            padding: 0px;
            background-color: white;
            color:black;
        }

        li {
            float: left;
        }

        li a {
              display: block;
              color:black;
              background:white;
              text-align: center;
              padding: 7px 8px;
              text-decoration: none;
        }

        
    </style>*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eor</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Домой</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Faculties" asp-action="Index">Факультеты</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Departments" asp-action="Index">Кафедры</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Directions" asp-action="Index">Направления</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Courses" asp-action="Index">Курсы</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Contents" asp-action="Index">Предметы</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Роли</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Roles" asp-action="UserList">Роли пользователей</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Пользователи</a></li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("admin"))
                {
                    <p>@User.Identity.Name</p>
                }
                else
                {
                    <p>@User.Identity.Name</p>
                }
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выход из учётой записи" />
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Вход</a>

                <a asp-controller="Account" asp-action="Register">Регистрация</a>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WebApplication2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
